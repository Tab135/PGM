    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PGM"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity
            android:name=".view.Payment.TokenShopActivity"
            android:exported="false" />
        <activity
            android:name=".view.Feedback.FeedbackActivity"
            android:exported="false"
            android:parentActivityName=".view.Comic.ChapterListActivity" />
        <activity
            android:name=".view.ChapterManagementActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddEditChapterActivity"
            android:exported="false" />
        <activity
            android:name=".view.ChapterActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddEditComicActivity"
            android:exported="false" />
        <activity
            android:name=".view.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.ForgotPasswordActivity"
            android:exported="false" />
        <activity android:name=".view.ProfileActivity" />
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.Comic.ComicListActivity" />
        <activity android:name=".view.Comic.ChapterListActivity" />
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />
        <activity android:name=".view.Comic.ComicViewerActivity" />
    </application>

</manifest>