<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Ảnh bìa -->
        <ImageView
            android:id="@+id/ivComicImage"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_comic_placeholder"
            android:background="@drawable/rounded_border"
            android:padding="2dp" />

        <!-- Thông tin truyện -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvComicTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comic Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvComicAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author: Unknown"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvComicChapters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapters: 0"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- Nút Manage Chapters -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManageChapters"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Manage Chapters"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:gravity="center"
                android:drawablePadding="6dp"
                app:icon="@drawable/ic_menu_book"
                app:iconGravity="textStart"
                app:iconTint="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp"
                android:backgroundTint="@android:color/white"
                android:paddingHorizontal="8dp" />

            <!-- Hàng nút thao tác -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="end"
                android:orientation="horizontal">



                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Comic"
                    android:padding="6dp"
                    android:src="@drawable/ic_edit"
                    android:tint="@android:color/holo_blue_dark" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Delete Comic"
                    android:padding="6dp"
                    android:src="@drawable/ic_delete"
                    android:tint="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>